---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getImage, Image } from "astro:assets";
import landServices from "@assets/land-services.jpg";
const LandServices = await getImage({ src: landServices, format: "avif" });
---

<BaseLayout title="Page Not Found">
  <section
    class="bg-cover bg-no-repeat bg-center relative"
    style=`background-image:url(${LandServices.src})`
  >
    <div class="h-full w-full bg-black/30">
      <div
        class="container mx-auto px-5 py-10 lg:py-20 min-h-[50vh] lg:min-h-[70vh] pb-28 flex items-center justify-center"
      >
        <div class="bg-white max-w-md p-8 rounded-2xl shadow-md">
          <h1 class="text-3xl font-bold">Page Not Found</h1>
          <p class="mt-4">
            Looks like you've followed a broken link or entered a URL that
            doesn't exist on this site.
          </p>
          <a
            href="/"
            class="mt-8 w-fit flex items-center gap-2 text-primary group"
          >
            <i
              class="fas fa-chevron-left relative group-hover:right-1 transition-all duration-300 right-0"
            ></i>
            <span class="font-bold underline">Back to our site</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
