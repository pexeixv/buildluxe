---
import { getImage, Image } from "astro:assets";
import Button from "@components/Button.astro";
import placeholder from "@assets/placeholder.jpg";
const Placeholder = await getImage({ src: placeholder, format: "webp" });
const members = [
  {
    name: "Chris",
    designation: "Director",
    image:
      "https://sp-ao.shortpixel.ai/client/to_auto,q_glossy,ret_img,w_300/https://www.balitecture.com/wp-content/uploads/2022/09/PicsArt_05-26-11.40.54-1-300x300.png",
  },
  {
    name: "Brent",
    designation: "Operations Director",
    image:
      "https://sp-ao.shortpixel.ai/client/to_auto,q_glossy,ret_img,w_300/https://www.balitecture.com/wp-content/uploads/2022/09/Balitecture-Team-Brent-new-300x300.png",
  },
  {
    name: "Daniel",
    designation: "Sales Director",
    image:
      "https://sp-ao.shortpixel.ai/client/to_auto,q_glossy,ret_img,w_300/https://www.balitecture.com/wp-content/uploads/2022/11/Balitecture-Team-Dan-new1-300x300.png",
  },
  {
    name: "Farida",
    designation: "Project Director",
    image:
      "https://sp-ao.shortpixel.ai/client/to_auto,q_glossy,ret_img,w_300/https://www.balitecture.com/wp-content/uploads/2022/11/FARIDA_new-300x300.png",
  },
];
---

<section>
  <div class="container mx-auto px-5 py-10 lg:py-0 grid lg:grid-cols-2">
    <div class="flex h-full flex-col justify-center">
      <h2 class="uppercase">
        <p class="font-thin">Invest in our</p>
        <p class="font-black">new developments</p>
      </h2>
      <p class="text-lg mt-4 max-w-xl">
        Goa property development is a perfect choice for investment. Design and
        build your dream villa in the tropical paradise of Goa. Begin with us
        now.
      </p>
      <Button classes="mt-8" link="#">Explore Goa Developments</Button>
    </div>
    <div
      class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-lg:mt-12 lg:p-4"
    >
      {
        [...Array(12).keys()].map((i) => (
          <div>
            <img
              class="aspect-square object-cover"
              src="https://placehold.co/400x600"
              alt=""
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<section
  class="bg-cover bg-no-repeat bg-center"
  style=`background-image:url('${Placeholder.src}')`
>
  <div class="w-full h-full bg-black/30">
    <div
      class="container mx-auto px-5 py-10 lg:py-20 flex flex-col items-center justify-center text-center text-white max-w-2xl"
    >
      <h2 class="uppercase">
        <p class="font-thin">Find land in Goa</p>
        <p class="font-black mt-1">For sale</p>
      </h2>
      <p class="mt-8">
        Let our team help you find the perfect plot of land for sale in Goa for
        your exceptional property development of stunning villa, resort or
        commercial project. Search our land listings here to find the perfect
        land for your needs and budget.
      </p>
      <Button variant="secondary" classes="mt-8" link="#">
        Explore Land Listings
      </Button>
    </div>
  </div>
</section>
<section>
  <div class="container mx-auto px-5 py-10 lg:py-20">
    <h2 class="uppercase text-center">
      <p class="font-thin">Meet our</p>
      <p class="font-black">property experts</p>
    </h2>
    <p class="uppercase text-sm text-center mt-4 tracking-widest opacity-60">
      Responsible for making the magic happen
    </p>
    <div class="mt-12 grid grid-cols-2 lg:grid-cols-4 gap-8">
      {
        members.map((member) => (
          <div class="bg-neutral-200 flex flex-col items-end max-w-xs">
            <div class="flex flex-col w-full p-4">
              <h3 class="uppercase text-2xl">{member.name}</h3>
              <span>{member.designation}</span>
            </div>
            <img
              src={member.image}
              class="grayscale max-h-64 w-auto mt-auto"
              alt=""
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
